{
	"name": "jover/drupal-pre-commit",
	"type": "library",
	"description": "A Git pre-commit hook to check Drupal Coding Standards and more.",
	"keywords": ["drupal","pre-commit","coding standards","php"],
	"homepage": "https://github.com/jover/drupal-pre-commit",
	"license": "MIT",
	"authors": [
		{
			"name": "jover",
			"email": "hello@jover.be",
			"homepage": "http://www.jover.be",
			"role": "Developer"
		}
	],
	"require": {
		"php": ">=5.4",
		"drupal/coder": "~8.2",
		"squizlabs/php_codesniffer": "2.*"
	},
	"autoload": {
		"classmap": [
			"scripts/git-hooks/GitHooks.php"
		]
	},
	"scripts": {
		"pre-install-cmd": [
			"jover\\drupal_pre_commit\\GitHooks::create"
		]
	}
}